@using InForno.Models
@model Utenti

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("TestLogin", "Auth", FormMethod.Post,new { @class = "row g-3" }))
{
    @*@Html.AntiForgeryToken()*@

    if (TempData["ErrorLogin"] != null)
    {
        <div class="alert alert-danger">
            Le credenziali non sono corrette
        </div>
    }

    <div class="mb-3">
        @Html.LabelFor(model => model.Utente, new { @class = "form-label" })
        @Html.EditorFor(model => model.Utente, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Password, new { @class = "form-label" })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    <div class="mb-3">
        @Html.CheckBox("keepLogged", new { @class = "form-check-input" })
        <label class="form-check-label" for="keepLogged">Mantienimi Loggato</label>
    </div>

    @*<div class="mb-3">
            <label for="Utente" class="form-label">Utente</label>
            <input type="text" class="form-control" id="Utente" name="Utente">
        </div>
        <div class="mb-3">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="Password">
        </div>*@

    @*<div>
           <input type="checkbox" name="keepLogged" id="keepLogged"/>
        </div>*@



    <button type="submit" class="btn btn-primary">Login</button>

}