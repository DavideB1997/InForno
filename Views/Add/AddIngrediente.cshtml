@model InForno.Models.Ingredienti



@{
    ViewBag.Title = "AddIngrediente";
}

<h2>AddIngrediente</h2>


@using (Html.BeginForm("AddIngrediente", "Add", FormMethod.Post, new { @class = "row g-3" }))
{

    @Html.AntiForgeryToken()

    <!-- Campo Nome -->
    <div class="mb-3">
        @Html.LabelFor(model => model.Nome, new { @class = "form-label" })
        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Descrizione, new { @class = "form-label" })
        @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi</button>
}

