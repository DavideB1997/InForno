@using InForno.Models
@model AddArticoloViewModel

@{
    ViewBag.Title = "Aggiungi Articolo";
}

<h2>Aggiungi Articolo</h2>

@using (Html.BeginForm("AddArticolo", "Add", FormMethod.Post, new { @class = "row g-3" }))
{
    @Html.AntiForgeryToken()

    <!-- Campo Nome -->
    <div class="mb-3">
        @Html.LabelFor(model => model.Articolo.Nome, new { @class = "form-label" })
        @Html.EditorFor(model => model.Articolo.Nome, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <!-- Campo Descrizione -->
    <div class="mb-3">
        @Html.LabelFor(model => model.Articolo.Descrizione, new { @class = "form-label" })
        @Html.EditorFor(model => model.Articolo.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <!-- Campo Prezzo -->
    <div class="mb-3">
        @Html.LabelFor(model => model.Articolo.Prezzo, new { @class = "form-label" })
        @Html.EditorFor(model => model.Articolo.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Articolo.TempoConsegna, new { @class = "form-label" })
        @Html.EditorFor(model => model.Articolo.TempoConsegna, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.ImmagineFile, new { @class = "form-label" })
        <input type="file" name="ImmagineFile" class="form-control" accept="image/*">
        @Html.ValidationMessageFor(model => model.ImmagineFile, "", new { @class = "text-danger" })
    </div>



    <!-- Checkbox per selezionare gli ingredienti -->
    <div class="mb-3">
        @foreach (var ingrediente in ViewBag.Ingredienti)
        {
            <div>
                <input type="checkbox" name="idIngredienti" value="@ingrediente.IdIngrediente" id="chkIngredienti_@ingrediente.IdIngrediente">
                <label for="chkIngredienti_@ingrediente.IdIngrediente">@ingrediente.Nome</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Aggiungi</button>
}